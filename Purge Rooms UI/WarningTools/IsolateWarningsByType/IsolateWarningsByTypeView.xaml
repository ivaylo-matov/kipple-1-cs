<Window x:Class="Purge_Rooms_UI.Isolatetest"
             x:Name='IsolatetestWin'
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             WindowStartupLocation='CenterScreen'
             BorderThickness='0,3,0,0'
             BorderBrush='#FCC020'
             Title='Purge Rooms'
             Width='550'
             Height='auto'
             SizeToContent='Height'>

  <Border Margin='10'>
    <StackPanel>
      <ComboBox Name='warningTypes'
                SelectedIndex='0' />
      <Separator Margin='0,10,0,0' />
      <StackPanel Orientation='Horizontal'
                  HorizontalAlignment='Right'
                  Margin='0,5,0,0'>
        <Button Name='Run'
                Content='Isolate'
                Width='70'
                Height='20'
                HorizontalAlignment='Right'
                Margin='10'
                Click='IsolatetestClick' />
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
