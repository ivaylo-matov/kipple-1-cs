<Window x:Class="Purge_Rooms_UI.PlaceFaceBasedFam.PlaceFaceBasedFamView"
        x:Name='PlaceFamWindow'
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation='CenterScreen'
        BorderThickness='0,3,0,0'
        BorderBrush='#FCC020'
        Title='Place Face Base Family'
        Width='350'
        Height='auto'
        SizeToContent='Height'>
    <Border Margin='10'>
        <StackPanel>
            <Button Content='Select Face'
                    Width='100'
                    Height='20'
                    HorizontalAlignment='Left'
                    Margin='0,5,0,0'
                    Click='SelectAndPlaceFamily' />
            <Separator Margin='0,10,0,0' />
            <StackPanel Orientation='Horizontal'
                  HorizontalAlignment='Right'
                  Margin='0,5,0,0'>

            </StackPanel>
        </StackPanel>

    </Border>
</Window>