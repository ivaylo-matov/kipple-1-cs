<Window x:Class="Purge_Rooms_UI.PurgeViewTemplatesView"
        x:Name="PurgeViewTemplatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation='CenterScreen'
        BorderThickness='0,3,0,0'
        BorderBrush='#FCC020'
        Title='Purge View Templates'
        Width='350'
        Height='auto'
        SizeToContent='Height'>
  <Border Margin='10'>
    <StackPanel>
      <CheckBox x:Name='chkTemplates'
                IsChecked='True'
                Margin='0,5,0,0' />
      <Separator Margin='0,10,0,0' />
      <StackPanel Orientation='Horizontal'
                  HorizontalAlignment='Right'
                  Margin='0,5,0,0'>
        <Button Name='Run'
                Content='OK'
                Width='70'
                Height='20'
                HorizontalAlignment='Right'
                Margin='10'
                Click='PurgeViewTemplates' />
      </StackPanel>
    </StackPanel>

  </Border>
</Window>

